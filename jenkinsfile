pipeline {
    agent any

    environment {
        SSH_CREDENTIALS = '4eed8674-a85f-40c9-8130-06391e4239c1'  // Replace with your actual SSH key credential ID
        SSH_USERNAME = 'ubuntu'
        SSH_HOST = '35.154.138.52'
        SSH_REMOTE_PATH = '/home/ubuntu'
    }

    stages {
        stage('Install Node.js and npm') {
            steps {
                script {
                    // Install Node.js using the NodeJS Jenkins plugin
                    def nodejsInstallation = tool name: 'nodejs', type: 'jenkins.plugins.nodejs.tools.NodeJSInstallation'
                    def nodejsHome = "${nodejsInstallation}/bin"
                    env.PATH = "${nodejsHome}:${env.PATH}"

                    // Install npm version 8 globally
                    sh 'npm install -g npm@8'
                }
            }
        }

        stage('Build') {
            steps {
                echo 'Building the application...'
                // Add your build steps here
            }
        }

        stage('Deploy to SSH host') {
            steps {
                script {
                    // Use the SSH key with sshagent
                    sshagent(credentials: [SSH_CREDENTIALS]) {
                        // Copy project files to the remote directory on the server using SCP
                        sh "scp -r ./README.md ./jenkinsfile ./package.json ./src ${SSH_USERNAME}@${SSH_HOST}:${SSH_REMOTE_PATH}/"
                    }
                }
            }
        }
    }

    post {
        success {
            echo 'Pipeline succeeded! All stages completed successfully.'
        }
        failure {
            echo 'Pipeline failed! At least one stage failed.'
        }
    }
}
