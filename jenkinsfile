pipeline {
    agent any

    environment {
        SSH_CREDENTIALS = '6aeb7266-d306-4a8e-b464-470a81cc52a7'
        SSH_USERNAME = 'ubuntu'
        SSH_HOST = '35.154.138.52'
        SSH_REMOTE_PATH = '/home/ubuntu'
    }

    stages {
        stage('Install Node.js and npm') {
            steps {
                script {
                    // Your existing Node.js installation steps
                }
            }
        }

        stage('Build') {
            steps {
                echo 'Building the application...'
                // Add your build steps here
            }
        }

        stage('Deploy to SSH host') {
            steps {
                script {
                    // Use the SSH key with sshagent
                    sshagent(credentials: [SSH_CREDENTIALS]) {
                        // Copy project files to the remote directory on the EC2 instance using SCP
                        sh "scp -r ./README.md ./jenkinsfile ./package.json ./src $SSH_USERNAME@$SSH_HOST:$SSH_REMOTE_PATH/"
                    }
                }
            }
        }
    }

    post {
        success {
            echo 'Pipeline succeeded! All stages completed successfully.'
        }
        failure {
            echo 'Pipeline failed! At least one stage failed.'
        }
    }
}
