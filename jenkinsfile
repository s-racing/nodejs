pipeline {
    agent any

    environment {
        SERVER_IP = 'ubuntu@35.154.138.52'
    }

    tools {
        // Define the Node.js installation named 'NodeJS'
        nodejs 'NodeJS'
    }

    stages {
        stage('Build') {
            steps {
                echo 'Building the Node.js application...'
                // Add your Node.js build steps here, e.g., npm install, npm run build
                // Example:
                sh 'npm install'
                sh 'npm run build'
            }
        }

        stage('Deploy to Server') {
            steps {
                echo "Deploying to ${env.BRANCH_NAME} Environment"
                deployToServer(env.BRANCH_NAME)
            }
        }

        // Add more stages as needed
    }

    post {
        success {
            echo 'Pipeline succeeded! All stages completed successfully.'
        }
        failure {
            echo 'Pipeline failed! At least one stage failed.'
        }
    }
}

def deployToServer(deploymentDirectory) {
    script {
        // Create the deployment directory if it doesn't exist
        sh "ssh ${SERVER_IP} 'mkdir -p /home/ubuntu/${deploymentDirectory}'"

        // Copy Node.js application files to the deployment directory
        sh "scp -r * ${SERVER_IP}:/home/ubuntu/${deploymentDirectory}"

        // Restart your Node.js application, e.g., using pm2
        sh "ssh ${SERVER_IP} 'cd /home/ubuntu/${deploymentDirectory} && pm2 restart your-app'"
    }
}
