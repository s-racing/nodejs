pipeline {
    agent any

    environment {
        SSH_CREDENTIALS = '6aeb7266-d306-4a8e-b464-470a81cc52a7'
        SSH_USERNAME = 'ubuntu'
        SSH_HOST = '35.154.138.52'
        REMOTE_PATH = '/home/ubuntu/'
    }

    stages {
        stage('Deploy to SSH host') {
            steps {
                script {
                    // Ensure the .ssh directory exists
                    sh "mkdir -p /var/lib/jenkins/.ssh"

                    // Fetch the SSH private key from Jenkins credentials
                    withCredentials([sshUserPrivateKey(credentialsId: SSH_CREDENTIALS, keyFileVariable: 'SSH_PRIVATE_KEY')]) {
                        
                        // Add remote host key to known_hosts
                        sh "ssh-keyscan -H ${SSH_HOST} >> /var/lib/jenkins/.ssh/known_hosts"

                        // Copy project files to the remote directory on the SSH host using SCP
                        sh "scp -r -i \$SSH_PRIVATE_KEY ./* ${SSH_USERNAME}@${SSH_HOST}:${REMOTE_PATH}"
                    }
                }
            }
        }
    }

    post {
        success {
            echo 'Deployment succeeded!'
        }
        failure {
            echo 'Deployment failed!'
        }
    }
}
