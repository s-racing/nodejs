pipeline {
    agent any

    stages {
        stage('Install Node.js and npm') {
            steps {
                script {
                    // Install Node.js using the NodeJS Jenkins plugin
                    // 'nodejs' should match the tool name you configured in Jenkins
                    def nodejsInstallation = tool name: 'nodejs', type: 'jenkins.plugins.nodejs.tools.NodeJSInstallation'
                    def nodejsHome = "${nodejsInstallation}/bin"
                    env.PATH = "${nodejsHome}:${env.PATH}"

                    // Install npm version 8 globally
                    sh 'npm install -g npm@8'
                }
            }
        }

        stage('Build') {
            steps {
                echo 'Building the application...'
                // Add your build steps here
            }
        }

        stage('Deploy to Development') {
            when {
                expression {
                    return (env.BRANCH_NAME == 'Development')
                }
            }
            steps {
                echo 'Deploying to Development Environment'
                // Your deployment steps for the Development environment go here
            }
        }

        stage('Deploy to Production') {
            when {
                expression {
                    return (env.BRANCH_NAME == 'Production')
                }
            }
            steps {
                echo 'Deploying to Production Environment'
                // Your deployment steps for the Production environment go here
            }
        }

        stage('Deploy to Staging') {
            when {
                expression {
                    return (env.BRANCH_NAME == 'Staging')
                }
            }
            steps {
                echo 'Deploying to Staging Environment'
                // Your deployment steps for the Staging environment go here
            }
        }

        stage('Deploy') {
            steps {
                script {
                    echo "Deploying to EC2 Instance for branch: ${BRANCH_NAME}"

                    // Copy project files to the respective directory on the EC2 instance using SCP
                    sh "scp -r -i /root/.ssh/id_rsa ${WORKSPACE} ubuntu@35.154.138.52:/home/ubuntu/${BRANCH_NAME.toLowerCase()}/"
                }
            }
        }

        // Add more stages as needed
    }

    post {
        success {
            echo 'Pipeline succeeded! All stages completed successfully.'
        }
        failure {
            echo 'Pipeline failed! At least one stage failed.'
        }
    }
}
