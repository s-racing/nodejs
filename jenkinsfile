pipeline {
    agent any

    environment {
        SERVER_IP = 'ubuntu@35.154.138.52    '
    }

    tools {
        nodejs 'NodeJSInstallation'
    }

    stages {
        stage('Build') {
            steps {
                echo 'Building the Node.js application...'
                sh 'npm install'
                sh 'npm run build'
            }
        }

        stage('Deploy to Development') {
            when {
                expression {
                    return (env.BRANCH_NAME == 'Development')
                }
            }
            steps {
                echo 'Deploying to Development Environment'
                deployToServer('Development')
            }
        }

        stage('Deploy to Production') {
            when {
                expression {
                    return (env.BRANCH_NAME == 'Production')
                }
            }
            steps {
                echo 'Deploying to Production Environment'
                deployToServer('Production')
            }
        }

        stage('Deploy to Staging') {
            when {
                expression {
                    return (env.BRANCH_NAME == 'Staging')
                }
            }
            steps {
                echo 'Deploying to Staging Environment'
                deployToServer('Staging')
            }
        }
    }

    post {
        success {
            echo 'Pipeline succeeded! All stages completed successfully.'
        }
        failure {
            echo 'Pipeline failed! At least one stage failed.'
        }
    }
}

def deployToServer(deploymentDirectory) {
    script {
        // Create the deployment directory if it doesn't exist
        sh "ssh ${SERVER_IP} 'mkdir -p /home/ubuntu/${deploymentDirectory}'"

        // Copy Node.js application files to the deployment directory
        sh "scp -r * ${SERVER_IP}:/home/ubuntu/${deploymentDirectory}"

        // Restart your Node.js application, e.g., using pm2
        sh "ssh ${SERVER_IP} 'cd /home/ubuntu/${deploymentDirectory} && pm2 restart your-app'"
    }
}
